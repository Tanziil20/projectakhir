        <TextView
            android:id="@+id/tvPembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Pembayaran"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.202"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPilihMetode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="Pilih Metode Pembayaran"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBri"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/bg_shadow"
        android:drawableLeft="@drawable/bri"
        android:text="2.000.000"
        android:gravity="center_vertical"
        android:textAlignment="textEnd"
        android:backgroundTint="@color/white"
        android:elevation="6dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPembayaran"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/tvBca"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/bca"
        android:text="2.000.000"
        android:gravity="center_vertical"
        android:textAlignment="textEnd"
        android:backgroundTint="@color/white"
        android:elevation="6dp"
        android:background="@drawable/bg_shadow"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBri"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/tvMandiri"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/mandiri"
        android:text="2.000.000"
        android:gravity="center_vertical"
        android:textAlignment="textEnd"
        android:backgroundTint="@color/white"
        android:elevation="6dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:background="@drawable/bg_shadow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBca"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/tvBni"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/bni"
        android:text="2.000.000"
        android:gravity="center_vertical"
        android:textAlignment="textEnd"
        android:backgroundTint="@color/white"
        android:elevation="6dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:background="@drawable/bg_shadow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMandiri"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_back" />


    <!--    </androidx.constraintlayout.widget.ConstraintLayout>-->

</androidx.constraintlayout.widget.ConstraintLayout>